<%= form_for @conn, auction_path(@conn, :create), [name: :auction], fn f -> %>
  <div class="form-group">
    <label>Name</label>
    <%= text_input f, :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Minimum Bid</label>
    <%= text_input f, :minimum_bid_amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Post", class: "btn btn-primary" %>
  </div>
<% end %>
